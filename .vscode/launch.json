{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug: Server",
            "type": "debugpy",
            "request": "launch",
            "program": "start-server.py",
            "cwd": "${workspaceFolder}/game_server",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug: AI Agent",
            "type": "debugpy",
            "request": "launch",
            "program": "start-agent.py",
            "args": ["ai_agent"],
            "cwd": "${workspaceFolder}/ai_agent",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug: AI Agent (Docker)",
            "type": "debugpy",
            "request": "attach",
            "preLaunchTask": "Start AI Agent Container",
            "postDebugTask": "Stop AI Agent Container",
            "connect": {
              "host": "localhost",
              "port": 5678
            },
            "pathMappings": [
              {
                "localRoot": "${workspaceFolder}",
                "remoteRoot": "/app"
              }
            ],
            "justMyCode":true
        },
        {
            "name": "Debug: Random Client",
            "type": "debugpy",
            "request": "launch",
            "program": "start-random-client.py",
            "args": ["Debug-Random-Agent"],
            "cwd": "${workspaceFolder}/random_client",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug: Console Client",
            "type": "debugpy",
            "request": "launch",
            "program": "start-console-client.py",
            "args": ["Debug-Console-Agent"],
            "cwd": "${workspaceFolder}/console_client",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug: Tests (Docker)",
            "type": "debugpy",
            "request": "attach",
            "preLaunchTask": "Start Game Tests Container",
            "postDebugTask": "Stop Game Tests Container",
            "connect": {
              "host": "localhost",
              "port": 5678
            },
            "pathMappings": [
              {
                "localRoot": "${workspaceFolder}",
                "remoteRoot": "/app"
              }
            ],
            "justMyCode":true
        }
    ]
}